{
    "name": "yii2-extensions/authclient",
    "type": "yii2-extension",
    "description": "External authentication via OAuth and OpenID for Yii2.",
    "keywords": [
        "yii2",
        "oauth",
        "openid",
        "openid connect",
        "auth",
        "api"
    ],
    "license": "mit",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "yiisoft/yii2": "^2.2",
        "yii2-extensions/httpclient": "dev-fix-default-value"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^4.6",
        "phpunit/phpunit": "^10.2",
        "proget-hq/phpstan-yii2": "^0.8.0"
    },
    "autoload": {
        "psr-4": { "yii\\authclient\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "yiiunit\\extensions\\authclient\\": "tests" }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    },
    "scripts": {
        "check-dependencies": "composer-require-checker",
        "mutation": "roave-infection-static-analysis-plugin",
        "phpstan": "phpstan",
        "test": "phpunit"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
